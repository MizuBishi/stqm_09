pipeline {
  agent any
  stages {
    stage('One') {
      steps {
        echo 'Hi, this is Step 1'
      }
    }
    stage('Two') {
      steps {
        echo 'Hi, this is Step 2'
      }
    }
    stage('Three') {
      steps {
        echo "Hi, this is Step 3"
      }
    }
    stage('four') {
      parallel {
        stage('Unit Test') {
          steps {
            echo "Running the Unit Tests..."
          }
        }
        stage('Integration Test') {
          steps {
            echo "Running the Integration Tests"
          }
        }
      }
    }
  }
}